<?xml version="1.0"?>
<robot name="soccer_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Properties -->
  <xacro:property name="wheel_radius" value="0.03"/>
  <xacro:property name="wheel_width" value="0.02"/>
  <xacro:property name="wheel_mass" value="0.2"/>

  <link name="base_footprint"/>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.05"/>
    </joint>


  <!-- ================= BASE LINK ================= -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.006" ixy="0.0" ixz="0.0"
        iyy="0.006" iyz="0.0"
        izz="0.012"/>
    </inertial>
  </link>

  <!-- ================= WHEEL MACRO ================= -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}">
      <visual>
        <origin rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>

      <collision>
        <origin rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="${wheel_mass}"/>
        <inertia
          ixx="0.0001" ixy="0" ixz="0"
          iyy="0.0001" iyz="0"
          izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} 0.0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- ================= WHEELS ================= -->
  <xacro:wheel name="front_left_wheel"  x="0.15"  y="0.15"/>
  <xacro:wheel name="front_right_wheel" x="0.15"  y="-0.15"/>
  <xacro:wheel name="back_left_wheel"   x="-0.15" y="0.15"/>
  <xacro:wheel name="back_right_wheel"  x="-0.15" y="-0.15"/>

    <!-- Camera -->
    <link name="camera_link">
        <visual>
            <geometry>
            <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin xyz="0.18 0 0.11" rpy="0 0 0"/>
    </joint>

    <!-- Kicker (solenoid valve) -->
    <link name="kicker_link">
        <visual>
            <geometry>
            <box size="0.05 0.02 0.01"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="kicker_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="kicker_link"/>
        <origin xyz="0.22 0 0.03"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.03" effort="50" velocity="2"/>
    </joint>

    <!-- Left Gripper -->
    <link name="left_gripper_wheel">
        <visual>
            <geometry>
            <cylinder radius="0.015" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="left_gripper_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_gripper_wheel"/>
        <origin xyz="0.2 0.04 0.04"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Right Gripper -->
    <link name="right_gripper_wheel">
        <visual>
            <geometry>
            <cylinder radius="0.015" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="right_gripper_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_gripper_wheel"/>
        <origin xyz="0.2 -0.04 0.04"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Gazebo Condition -->
  <gazebo reference="base_link">
    <selfCollide>false</selfCollide>
    </gazebo>

  <gazebo reference="front_left_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="front_right_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="back_left_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="back_right_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="camera_link">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="kicker_link">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="left_gripper_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>
  <gazebo reference="right_gripper_wheel">
    <selfCollide>false</selfCollide>
    </gazebo>

</robot>