<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="lidar_test">
    <static>false</static>

    <link name="lidar_link">
      <pose>0 0 0.12 0 0 0</pose>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>

      <sensor name="lidar" type="ray">
        <always_on>true</always_on>
        <update_rate>20</update_rate>

        <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>6.0</max>
          </range>
        </ray>

        <topic>/scan</topic>
      </sensor>
    </link>
  </model>
</sdf>
